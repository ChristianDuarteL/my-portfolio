---
interface Props {
    src: string;
    alt: string;
    caption?: string;
    class?: string;
}

const { src, alt, caption, class: className } = Astro.props;
---

<figure class="flex flex-col">
    <div class={`border-1 border-[#aaa]`}>
        <img src={src} alt={alt} class={`${className} object-cover w-full max-h-full`} />
    </div>
    {caption && <figcaption class="p-1 font-sans-serif font-[500]">{caption}</figcaption>}
</figure>
